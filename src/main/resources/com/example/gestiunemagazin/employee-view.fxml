                           <font>
                              <Font name="Consolas" size="12.0" />
                           </font>
                        </TextArea>
                        <Button fx:id="refreshDataButton" layoutX="166.0" layoutY="390.0" mnemonicParsing="false" onAction="#onRefreshDataClick" text="Refresh Data" />
                        <Button fx:id="backButton" layoutX="22.0" layoutY="390.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="64.0" text="Back" />
